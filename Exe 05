
public class Exe05 {
	public static double somatoria(int N) {
        // Condição de parada: Quando N == 1, retorna 1
        if (N == 1) {
            return 1.0;
        }
     // A função soma 1/N ao resultado da chamada recursiva para (N-1)
        return (1.0 / N) + somatoria(N - 1);
    }

    public static void main(String[] args) {
        int N = 5; // Testando com N = 5
        double resultado = somatoria(N);
        System.out.printf("Somatória para N = %d: %.5f%n", N, resultado);
    }

}
